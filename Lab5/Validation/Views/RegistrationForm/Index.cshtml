@model Validation.RegistrationFormModel

<h1>Registration</h1>
<div>

</div>
<form action="/Registration" method="post">
    <div class="row">
        <div class="form-group col-12 col-sm-6">
            <label asp-for="FirstName">FirstName</label>
            <input type="text" class="form-control"/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group col-12 col-sm-6">
            <label asp-for="LastName">LastName</label>
            <input type="text" class="form-control"/>
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress">EmailAddress</label>
        <input type="text" class="form-control"/>
        <span asp-validation-for="EmailAddress"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Number</label>
        <input type="text" class="form-control"/>
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" class="form-control"/>
        
    </div>
    <div class="row">
        <div class="form-group col-12 col-sm-4">
            <label for="City">City</label>
            <input type="text" class="form-control" id="City" name="City" />
            
        </div>
        <div class="form-group col-12 col-sm-4">
            <label></label>
            <select  class="form-select" asp-for="StateList" asp-items="Model.StateList"></select>
        </div>
        <div class="form-group col-12 col-sm-4">
            <label for="ZipCode">Zip Code</label>
            <input type="text" class="form-control" id="ZipCode" name="ZipCode" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>